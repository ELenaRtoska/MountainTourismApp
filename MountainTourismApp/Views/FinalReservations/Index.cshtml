@model IEnumerable<MountainTourismApp.Models.FinalReservation>

@{
    ViewBag.Title = "Index";
}


<br />
<h2 style="font-family: fantasy; text-align: center;">Резервации</h2>
<p style="font-family: cursive; text-align:center;">Сите резервации за планински тури</p>
<br />
@if (User.IsInRole("Administrator"))
{
    @Html.ActionLink("Create New", "Create")
}

<table class="table">
    <tr>
        <th style="font-family: cursive; text-align: center;">
            @Html.DisplayNameFor(model => model.userEmail)
        </th>
        <th style="font-family: cursive; text-align: center;">
            @Html.DisplayNameFor(model => model.finalSherpa)
        </th>
        <th style="font-family: cursive; text-align: center;">
            @Html.DisplayNameFor(model => model.gpsFile)
        </th>
        <th style="font-family: cursive; text-align: center;">
            @Html.DisplayNameFor(model => model.mountain)
        </th>
        <th style="font-family: cursive; text-align: center;">
            @Html.DisplayNameFor(model => model.dateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td style="font-family: cursive; text-align: center;">
        @Html.DisplayFor(modelItem => item.userEmail)
    </td>
    <td style="font-family: cursive; text-align: center;">
        @Html.DisplayFor(modelItem => item.finalSherpa)
    </td>
    <td style="font-family: cursive; text-align: center;">
        @Html.DisplayFor(modelItem => item.gpsFile)
    </td>
    <td style="font-family: cursive; text-align: center;">
        @Html.DisplayFor(modelItem => item.mountain)
    </td>
    <td style="font-family: cursive; text-align: center;">
        @Html.DisplayFor(modelItem => item.dateTime)
    </td>
    
    <td>
        @if (User.IsInRole("Administrator"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />
            @Html.ActionLink("Details", "Details", new { id = item.Id }) <br />
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        }
    </td>
    
</tr>
    }

</table>
