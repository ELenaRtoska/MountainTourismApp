@model IEnumerable<MountainTourismApp.Models.Mountain>

@{
    ViewBag.Title = "Mountains";
}
    <br />
<h2 style=" font-family: fantasy; text-align:center;">Планини</h2>
<br />
<p style=" font-family: cursive; text-align: center;">Изберете планина која сакате да ја искачувате, и притеснете на копчето <i>'GPS фајлови'</i> на избраната планина за да продолжите со резервацијата</p>
<br />
<p>

    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Креирај нов запис", "Create")
    }
    </p>

<style>
    #test {
        position: relative;
        padding: 8px 20px;
        margin: 20px 0 0 0;
        font: bold 14px Arial, Helvetica;
        background-color: #eee;
        font-family: cursive;
        color: black;
        border-color: black;
        border-width: medium;
        border-radius: 5px;
    }
</style>
<table class="table">
    <tr>
        <th style="text-align:center; font-family: cursive; text-align:center;">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="text-align:center; font-family: cursive;">
           @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th style="text-align:center; font-family: cursive;">
            @Html.DisplayNameFor(model => model.Raiting)
        </th>
        <th style="text-align: center; font-family: cursive;">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td style="        font-family: fantasy;
        text-align: center;
        vertical-align: inherit;">
        @item.Name
    </td>
    <td style="text-align: center; vertical-align: inherit;">
        <!-- Html.DisplayFor(modelItem => item.ImageURL) -->
        <img src="@item.ImageURL" style="border-radius: 8px; width:350px; height:350px; display:block; margin-left:auto; margin-right:auto; vertical-align:inherit; text-align: center;" />
    </td>


    <td style=" font-family: cursive; text-align: center; vertical-align: inherit;">
        @Html.DisplayFor(modelItem => item.Raiting)
    </td>
    <td style=" font-family: cursive; vertical-align:inherit;">
        @item.Description
    </td>
    <td style=" font-family: cursive; text-align:center; vertical-align:inherit;">
        <div class="btn" id="test">
            @Html.ActionLink("GPS фајлови", "ListGPSFiles", new { id = item.Id })
        </div>


        @if (User.IsInRole("Administrator"))
        {
            <br />
            @Html.ActionLink("Измени", "Edit", new { id = item.Id })<br />
            @Html.ActionLink("Избриши", "Delete", new { id = item.Id })
        }
    </td>
</tr>
}

</table>
